{# templates/login/index.html.twig #}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Welcome!{% endblock %}</title>

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}

    {% block script %}
    {% endblock %}
</head>
{# ... #}

{% block body %}
    <div style="visibility: hidden"><span>Hidden</span></div>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
        <section class="h-100" style="background-color: #2C3034">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-lg-5">
                        <div class="card rounded-3 text-black">
                            <div class="row">
                                <div class="">
                                    <div class="card-body p-md-5 mx-md-4">

                                        <div class="text-center">
                                            <h2 class="mt-1 mb-5 pb-1">Brown Foodservice Intranet</h2>
                                        </div>

                                        <form action="{{ path('app_login') }}" method="post">
                                            <div class="form-outline mb-4">
                                                <label class="form-label" for="username">Email:</label>
                                                <input class="form-control" type="text" id="username" name="_username" value="">
                                            </div>

                                            <div class="form-outline mb-4">
                                                <label class="form-label" for="password">Password:</label>
                                                <input class="form-control" type="password" id="password" name="_password">
                                            </div>

                                            <input type="hidden" name="_target_path" value="/">

                                            <div class="row">
                                                <div class="text-center col-sm-3">
                                                    <button class="btn btn-primary mb-3" type="submit">Log in</button>
                                                </div>

                                                <div class="text-center col-sm-3">
                                                    <a href="{{ path('app_register') }}" class="btn btn-primary mb-3">Register</a>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>


















{% endblock %}